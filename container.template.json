{
  "containers": {
    "$AWS_LIGHTSAIL_SERVICE_NAME": {
      "image": "$CONTAINER_IMAGE",
      "ports": {
        "3333": "HTTP"
      },
      "environment": {
        "DB_CONNECTION": "pg",
        "DB_HOST": "$DB_HOST",
        "DB_USER": "$DB_USER",
        "DB_PASSWORD": "$DB_PASSWORD",
        "DB_NAME": "$DB_NAME",
        "PORT": "3333",
        "HOST": "0.0.0.0",
        "NODE_ENV": "$NODE_ENV",
        "APP_KEY": "$APP_KEY",
        "API_URL": "$API_URL",
        "APP_URL": "http://beta.kulturdaten-berlin.anyvent.cloud",
        "FROM_EMAIL": "info@kulturdaten.berlin",
        "SMTP_HOST": "$SMTP_HOST",
        "SMTP_PORT": "$SMTP_PORT",
        "SMTP_USERNAME": "$SMTP_USERNAME",
        "SMTP_PASSWORD": "$SMTP_PASSWORD",
        "CACHE_VIEWS": "false",
        "DRIVE_DISK": "s3",
        "S3_KEY": "$S3_KEY",
        "S3_SECRET": "$S3_SECRET",
        "S3_REGION": "$AWS_REGION",
        "S3_BUCKET": "$S3_BUCKET"
      }
    }
  },
  "publicEndpoint": {
    "containerName": "$AWS_LIGHTSAIL_SERVICE_NAME",
    "containerPort": 3333
  }
}
